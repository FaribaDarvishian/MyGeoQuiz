    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/im_btn_setting"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_gravity="bottom|right"
            android:foregroundGravity="top|right"
            android:layout_marginRight="5dp"
            app:srcCompat="@mipmap/setting_foreground" />

        <TextView
            android:id="@+id/txt_view_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_0"
            android:textSize="16dp"
            android:layout_marginBottom="30dp"/>


        <TextView
            android:id="@+id/txt_view_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            tools:text="اینجا سوالات را می بینیم" />

        <Button
            android:id="@+id/btn_cheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تقلب"
            android:textSize="18sp"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/button_false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/button_true"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/im_btn_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/im_btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/im_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_next" />

            <ImageButton
                android:id="@+id/im_btn_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_ff" />
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Score" />

        <ImageButton
            android:id="@+id/im_btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

    </LinearLayout>
</LinearLayout>